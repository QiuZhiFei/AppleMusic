  pod 'Himotoki',   '~> 3.0.1'
  pod 'PureLayout', '~> 3.0.2'
  pod 'MJRefresh'
  pod 'ZFListView', '~> 0.0.5'

  pod 'ZFMediaPlayer',
    :path => 'ZFMediaPlayer.podspec'
end
